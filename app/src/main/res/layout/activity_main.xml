<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.birger.mainmenuactivity.MainMenuActivity"
    android:weightSum="1">


    <Button
        android:text="@string/btn_quit"
        android:layout_width="300px"
        android:id="@+id/btnQuit"
        android:onClick="quit"
        android:layout_weight="0.25"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="150px" />

    <Button
        android:text="@string/btn_addPerson"
        android:id="@+id/btnAddPerson"
        android:onClick="toAddPerson"
        android:layout_weight="0.25"
        android:layout_below="@+id/btnPics"
        android:layout_toEndOf="@+id/btnQuiz"
        android:layout_height="500px"
        android:layout_width="500dp"
        android:layout_toRightOf="@+id/btnQuiz" />

    <Button
        android:text="@string/btn_showNz"
        android:id="@+id/btnNames"
        android:onClick="toNameList"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/btn_startQz"
        android:id="@+id/btnQuiz"
        android:onClick="toQuiz"
        android:layout_weight="0.25"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_below="@+id/btnNames"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/btn_showPic"
        android:layout_height="300px"
        android:id="@+id/btnPics"
        android:onClick="toGallery"
        android:layout_width="350px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btnNames"
        android:layout_toEndOf="@+id/btnNames"
        android:layout_above="@+id/btnQuiz" />

</RelativeLayout>
